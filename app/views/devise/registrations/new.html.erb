
<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">IN+</h1>

            </div>
            <h3>Register to IN+</h3>
            <p>Create account to see it in action.</p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                <div class="form-group">
                    <%= f.email_field :email, class:"form-control", placeholder: "Email", required: "" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, class:"form-control", placeholder: "Password", required: "" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, class:"form-control", placeholder: "Password Confirmation", required: "" %>
                </div>
                <div class="form-group">
                        <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                </div>

                <%= f.submit "Register", class: "btn btn-primary block full-width m-b" %>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/users/sign_in">Login</a>
              <% end %>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

</body>